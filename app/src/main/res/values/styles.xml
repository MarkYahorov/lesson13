<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btns_in_view_holder">
        <item name="android:layout_width">@dimen/width_buttons_in_view_holder_item</item>
        <item name="android:layout_height">@dimen/height_buttons_in_view_holder_item</item>
    </style>

    <style name="text_count">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_count_in_view_holder_item</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">@dimen/edit_text_layout_width</item>
        <item name="android:layout_marginTop">@dimen/edit_text_marginTop</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="recycler">
        <item name="android:layout_height">@dimen/recycler_height</item>
        <item name="android:layout_width">@dimen/recycler_width</item>
    </style>
</resources>